<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/btn_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/normal_mode"/>

    <Button
        android:id="@+id/btn_replaceable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/replaceable_mode"/>

    <Button
        android:id="@+id/btn_long_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/length_long_normal"/>

    <Button
        android:id="@+id/btn_long_replaceable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/length_long_replaceable"/>

    <Button
        android:id="@+id/btn_sub_thread_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/sub_thread_normal"/>

    <Button
        android:id="@+id/btn_sub_thread_replaceable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sub_thread_replaceable"/>
</LinearLayout>
